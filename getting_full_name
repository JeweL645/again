def getting_a_formatted_name(first_name, last_name, middle_name=''):  # we can notice a default valur to the parameter named middle_name
    """Returning a formatted name neatly"""

    if middle_name:                                              #if the middle name exists then it will evaluates as True
        full_name = first_name +" "+middle_name+" "+last_name
        return full_name.title()
    else:
        full_name = first_name + " " + last_name
        return full_name.title()


user1 = getting_a_formatted_name('faria', 'parvez')              #calling the function without the middle name
print(user1)

print()

user1 = getting_a_formatted_name('faria', 'ria', 'parvez')       #calling the function with middle name
print(user1)
